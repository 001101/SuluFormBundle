<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="client_form.handler.class">Client\Bundle\FormBundle\Form\Handler</parameter>
        <parameter key="client_form.example_form.class">Client\Bundle\FormBundle\Form\Type\FormExampleType</parameter>
    </parameters>

    <!-- Define here your own services: -->
    <services>
        <service id="client_form.handler" class="%lient_form.handler.class%">
            <argument type="service" id="form.factory" />
            <argument type="service" id="form.registry" />
            <argument type="service" id="doctrine.orm.default_entity_manager" />
            <argument type="service" id="templating" />
            <argument type="service" id="logger" />
        </service>

        <service id="client_form.example_form" class="%client_form.example_form.class%">
            <tag name="form.type" alias="form_example" />
        </service>
    </services>
</container>
