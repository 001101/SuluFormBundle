{% block choice %}
    <div class="grid">
        <div class="grid-row m-bottom-20">
            <div class="grid-col-12 floating form-group">
                <label for="choices<~=index~>"
                       class="pointer"
                       title="Choice">
                    <%= translate('l91_sulu_form.choice') %>
                </label>

                <textarea id="choices<~=index~>"
                          data-property="options[choices]"
                          class="form-element preview-update trigger-save-button"
                          data-mapper-property="options[choices]"></textarea>

                <div class="block-content" data-sort-mode-id="{{ blockId }}title<~=index~>"></div>

                <div class="input-description"></div>
            </div>

            <div class="grid-col-12 floating form-group">
                <label for="expanded<~=index~>">
                    <div class="custom-checkbox">
                        <input type="checkbox"
                               id="expanded<~=index~>"
                               data-property='options[expanded]'
                               data-mapper-property="options[expanded]"
                               class="preview-update trigger-save-button form-element"/>
                        <span class="icon"></span>
                    </div>
                    <%= translate('l91_sulu_form.expanded') %>
                </label>
            </div>
        </div>
    </div>
{% endblock %}
